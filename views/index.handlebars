<h1>HAMBURGER THYME!</h1>

<div class='container'>
  <div>
    <h2>Available BURGERS</h2>
    <ol>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/unless}}
      {{/each}}
    </ol>
  </div>

  <div>
    <h2>DEVOURED BURGERS!</h2>
    <ol>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/if}}
      {{/each}}
    </ol>
  </div>
</div>

<h2>SUBMIT A BURGER</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
